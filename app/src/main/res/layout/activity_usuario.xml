<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuarios">

    <View
        android:id="@+id/splashDegradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:layout_editor_absoluteX="-204dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/UsuariosGLh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:id="@+id/UsuariosAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inder"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UsuariosGLh1"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:id="@+id/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adopt &amp; Find"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UsuariosAppName"
        android:textSize="15sp"
        android:textColor="@color/Adopt"
        android:textStyle="bold"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/UsuariosGLv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/UsuariosGLv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

   
    <com.google.android.material.button.MaterialButton
        android:id="@+id/IniciarSesionButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:text="Iniciar SesiÃ³n"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/UsuariosGLv2"
        app:layout_constraintStart_toStartOf="@id/UsuariosGLv1"
        app:layout_constraintTop_toBottomOf="@id/UsuariosAppName"
        app:backgroundTint="@null"
        android:translationZ="10dp"
        android:background="@drawable/bg_start_button"
        android:textColor="@color/white"
        />

   
    <com.google.android.material.button.MaterialButton
        android:id="@+id/CrearCuentaButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Crear Cuenta"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/UsuariosGLv2"
        app:layout_constraintStart_toStartOf="@id/UsuariosGLv1"
        app:layout_constraintTop_toBottomOf="@id/IniciarSesionButton"
        android:translationZ="10dp"
        app:backgroundTint="@null"
        android:background="@drawable/bg_start_button"
        android:textColor="@color/white"
        />

    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/InvitadoButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Entrar como Invitad@"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/UsuariosGLv2"
        app:layout_constraintStart_toStartOf="@id/UsuariosGLv1"
        android:translationZ="10dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/CrearCuentaButton"
        android:background="@drawable/bg_start_button"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/Animalitos"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/dogss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/InvitadoButton"
        android:layout_marginTop="10dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>