<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <View
        android:id="@+id/splashDegradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/LoginGLh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <ImageView
        android:id="@+id/LoginLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pet_match2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginGLh1"
        />

    <TextView
        android:id="@+id/LoginAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginLogo"
        android:textSize="35sp"
        android:fontFamily="@font/akira"
        android:textColor="@color/black"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LoginGLv1"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LoginGLv2"
        app:layout_constraintGuide_percent="0.8"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LoginTILuserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LoginAppName"
        app:layout_constraintStart_toStartOf="@id/LoginGLv1"
        app:layout_constraintEnd_toEndOf="@id/LoginGLv2"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/TextoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre de usuario"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            >

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LoginTILpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LoginTILuserName"
        app:layout_constraintStart_toStartOf="@id/LoginGLv1"
        app:layout_constraintEnd_toEndOf="@id/LoginGLv2"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            android:textColor="@color/black"
            >

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginTILpassword"
        />

    <TextView
        android:id="@+id/LoginTVRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="多Aun no te has registrado todavia?"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginButton"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/LoginTVOlvidar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="多Te has olvidado la contrase単a?"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginTVRegister"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
